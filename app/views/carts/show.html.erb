<h1>Shopping Cart</h1>

<% if @order_items.any? %>
<ol>
  <% @order_items.each do |item| %>
    <li><%= item.product.name.capitalize %> | <%= link_to "Delete", order_item_path(item), :data => {:confirm => "You sure?", :method => "delete"} %></p>
    <p> Unit Price: <%= number_to_currency item.product.price %> | Quantity: <%= item.quantity %> | Total Price: <%= number_to_currency (item.product.price * item.quantity) %></li>
    <br>
  <% end %>
</ol>
<hr>
  <p>Your Total: <%= number_to_currency current_order.total_price %></p>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %>
